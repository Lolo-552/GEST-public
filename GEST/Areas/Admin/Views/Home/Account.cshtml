@model GEST.Areas.Admin.Models.Admin

<div class="box">
    <h2>Ustawienia konta</h2>

    <p>Zmiana hasła</p>
    <div class="line"></div>
    <form asp-controller="Home" asp-action="Account" method="post" id="accountForm">
        <div class="form-group row">
            <div class="col-md-4 col-lg-3">
            <label for="password" class="form-label">Nowe hasło</label>

                <input type="password" class="form-control" id="password" name="password" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-4 col-lg-3">
            <label for="confirmPassword" class="form-label">Potwierdź hasło</label>

                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
            </div>
        </div>
        <p class="text-danger passwordChangeError"></p>
        <div class="line"></div>
        <input type="submit" value="Zmień hasło" class="btn btn-primary" />
    </form>
</div>
