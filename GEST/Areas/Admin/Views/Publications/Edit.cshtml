@model GEST.Models.Publications

@{
    ViewData["Title"] = "Edit";
}

<div class="box">
    <h2>Publikacje</h2>

    <p>Edytowanie</p>
    <div class="line"></div>
    <div class="row">
            <form asp-action="Create">
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Authors" class="control-label">Autorzy</label>
                    <textarea asp-for="Authors" class="form-control auto-size-textarea" rows="1">@Html.DisplayFor(item => item.Authors)</textarea>
                    <span asp-validation-for="Authors" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Nazwa</label>
                    <textarea asp-for="Name" class="form-control auto-size-textarea" rows="1">@Html.DisplayFor(item => item.Name)</textarea>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
                <div class="line"></div>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-dark back-button">Wstecz</a>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
