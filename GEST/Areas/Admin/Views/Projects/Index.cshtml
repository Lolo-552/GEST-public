@model IEnumerable<GEST.Models.Projects>


@{
    ViewData["Title"] = "Projekty";
}
<div class="box">
    <h2>Projekty</h2><p>
        <a asp-action="Create" class="btn btn-success">Dodaj</a>
    </p>
<div class="line"></div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Data utworzenia
            </th>
            <th>
                Tytuł
            </th>
            <th class="d-none d-md-table-cell">
                Opis
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                        @item.DateAdded.ToString("dd.MM.yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                    <td class="d-none d-md-table-cell">
                        @Html.DisplayFor(modelItem => item.ShortDescription)
                    </td>
                <td>
                    <div class="button-box d-flex justify-content-end" style="gap: 5px;">
                        <a href="@Url.Action("Details","Projects",new{area="",id=item.Id})" class="btn btn-sm btn-info" target="_blank"><span class="material-symbols-outlined">http</span></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary action-btn"><span class="material-symbols-outlined">read_more</span></a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-dark action-btn"><span class="material-symbols-outlined">edit</span></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger action-btn"><span class="material-symbols-outlined">delete</span></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>